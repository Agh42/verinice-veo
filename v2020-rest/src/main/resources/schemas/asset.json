{
  "definitions": {},
  "$schema": "http://verinice.com/veo/draft-01/schema#",
  "type": "object",
  "description": "Schema for assets from ISO 27000",
  "title": "ITBP assets",
  "properties": {
    "$veo.id": {
      "type": "string",
      "title": "The UUID to identify the element"
    },
    "$veo.type": {
      "description": "The name of the type described by this schema.",
      "enum": [
        "asset"
      ]
    },
    "$veo.title": {
      "type": "string",
      "title": "The title of the asset"
    },
    "parent": {
      "type": "string",
      "title": "The UUID to identify the parent"
    },
    "abbreviation": {
      "type": "string",
      "title": "The abbreviation of the asset"
    },
    "description": {
      "type": "string",
      "title": "The description of the asset"
    },
    "assetType": {
      "type": "string",
      "title": "The type of the asset",
      "enum": [
        "information",
        "software",
        "physical",
        "service",
        "people"
      ]
    },
    "businessImpactConfidentiality": {
      "type": "string",
      "title": "The business impact on confidentiality of the asset",
      "enum": [
        "low",
        "normal",
        "high",
        "very-high"
      ]
    },
    "businessImpactIntegrity": {
      "type": "string",
      "title": "The business impact on integrity of the asset",
      "enum": [
        "low",
        "normal",
        "high",
        "very-high"
      ]
    },
    "businessImpactAvailability": {
      "type": "string",
      "title": "The business impact on availability of the asset",
      "enum": [
        "low",
        "normal",
        "high",
        "very-high"
      ]
    }
  },
  "required": [
    "id",
    "schema",
    "parent",
    "title"
  ]
}
