{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "reviewers": [
    "fw",
    "jj",
    "jk"
  ],
  "automerge": true,
  "automergeType": "pr",
  "assignAutomerge": true,
  "postUpgradeTasks": {
    "commands": [
      "./gradlew generateLicenseReport"
    ],
    "fileFilters": [
      "LICENSE-3RD-PARTY.txt"
    ],
    "executionMode": "update"
  },
  "packageRules": [
    {
      "matchPackagePatterns": [
        "^com.diffplug.spotless"
      ],
      "groupName": "Spotless"
    },
    {
      "matchPackagePatterns": [
        "^org.spockframework:"
      ],
      "groupName": "Spock"
    },
    {
      "matchPackagePatterns": [
        "^org.springdoc:"
      ],
      "groupName": "Springdoc"
    },
    {
      "matchPackagePatterns": [
        "^org.testcontainers:"
      ],
      "groupName": "Testcontainers"
    },
    {
      "matchPackagePatterns": [
        "^com.github.victools:jsonschema"
      ],
      "groupName": "JSON Schema Generator"
    },
    {
      "matchPackagePatterns": [
        "^io.swagger.core.v3:"
      ],
      "groupName": "Swagger"
    },
    {
      "matchPackagePatterns": [
        "^io.jsonwebtoken:"
      ],
      "groupName": "JWT"
    },
    {
      "matchPackagePatterns": [
        "^com.diffplug.spotless",
        "^org.spockframework:",
        "^org.springdoc:",
        "^com.github.jk1.dependency-license-report$",
        "^com.github.spotbugs$",
        "org.testcontainers:",
        "^io.freefair.lombok",
        "^gradle$",
        "^org.keycloak:keycloak-authz-client$"
      ],
      "postUpgradeTasks": {
        
      }
    }
  ]
}
