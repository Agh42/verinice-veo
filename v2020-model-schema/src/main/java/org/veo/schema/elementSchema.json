{
	"id": "http://org.veo.v2020/entry-schema#",
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "veo Element Schema",
	"type": "array",
	"items": {
		"title": "Element",
		"type": "object",
		"properties": {
			"id": {
				"description": "The unique identifier of an element",
				"type": "number"
			},
			"parent-id": {
				"description": "The unique identifier of an elements parent-element",
				"type": "number"
			},
			
			"name": {
				"type": "string"
			},
			"tags": {
				"type": "array",
				"items": {
					"type": "string"
				},
				"minItems": 0,
				"uniqueItems": true
			},
			"can-contain": {
				"description": "which types of elements can be contained in this one",
				"type": "array",
				"items": {
					"type": "string"
				},
				"minItems": 0,
				"uniqueItems": true
			},
			"required": [
				"id",
				"parent-id",
				"name",
				"can-contain"
			]
		}
	}
}
