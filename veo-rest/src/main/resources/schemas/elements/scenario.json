{
  "definitions": {},
  "$schema": "http://verinice.com/veo/draft-01/schema#",
  "type": "object",
  "description": "Schema for Scenario from ISO 27000",
  "title": "ISO Scenario",
  "properties": {
    "id": {
      "type": "string",
      "title": "The UUID to identify the element"
    },
    "type": {
      "description": "The name of the type described by this schema.",
      "enum": [
        "scenario"
      ]
    },
    "title": {
      "type": "string",
      "title": "Title"
    },
    "parent": {
      "type": "string",
      "title": "Parent ID"
    },
    "code": {
      "type": "string",
      "title": "Identification code"
    },
    "description": {
      "type": "string",
      "title": "Description"
    },
    "probability": {
      "title": "Probability",
      "enum": [
        "low",
        "mid",
        "high"
      ]
    },
    "tags": {
      "title": "Tags",
      "description": "Tags to filter by.",
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    }
  },
  "required": [
    "id",
    "type",
    "parent",
    "title"
  ]
}
